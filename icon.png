<svg width="128" height="128" viewBox="0 0 128 128" xmlns="http://www.w3.org/2000/svg">
  <!-- Background Circle -->
  <circle cx="64" cy="64" r="64" fill="url(#bgGradient)"/>
  
  <!-- Gradient Definitions -->
  <defs>
    <!-- Background Gradient -->
    <radialGradient id="bgGradient" cx="0.3" cy="0.3" r="0.8">
      <stop offset="0%" stop-color="#1a1a2e"/>
      <stop offset="50%" stop-color="#0a0a0a"/>
      <stop offset="100%" stop-color="#050505"/>
    </radialGradient>
    
    <!-- Diamond Gradient -->
    <linearGradient id="diamondGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#8b5cf6"/>
      <stop offset="30%" stop-color="#3b82f6"/>
      <stop offset="70%" stop-color="#22d3ee"/>
      <stop offset="100%" stop-color="#8b5cf6"/>
    </linearGradient>
    
    <!-- Inner Glow -->
    <filter id="glow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
    
    <!-- Drop Shadow -->
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="2" stdDeviation="3" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Main Diamond/Crystal Shape -->
  <g transform="translate(64, 64)" filter="url(#shadow)">
    <!-- Outer Diamond -->
    <path d="M 0,-30 L 25,-10 L 25,10 L 0,30 L -25,10 L -25,-10 Z" 
          fill="url(#diamondGradient)" 
          filter="url(#glow)"
          opacity="0.9"/>
    
    <!-- Inner Highlight -->
    <path d="M 0,-25 L 20,-8 L 20,8 L 0,25 L -20,8 L -20,-8 Z" 
          fill="none" 
          stroke="rgba(255,255,255,0.2)" 
          stroke-width="1"/>
    
    <!-- Top Facet -->
    <path d="M 0,-30 L 25,-10 L 0,-5 L -25,-10 Z" 
          fill="rgba(139,92,246,0.3)"/>
    
    <!-- Left Facet -->
    <path d="M -25,-10 L 0,-5 L 0,30 L -25,10 Z" 
          fill="rgba(59,130,246,0.3)"/>
    
    <!-- Right Facet -->
    <path d="M 25,-10 L 25,10 L 0,30 L 0,-5 Z" 
          fill="rgba(34,211,238,0.3)"/>
    
    <!-- Center Highlight -->
    <circle cx="0" cy="0" r="4" fill="rgba(255,255,255,0.6)"/>
    
    <!-- Inner Sparkles -->
    <g opacity="0.7">
      <circle cx="-8" cy="-8" r="1" fill="#ffffff"/>
      <circle cx="10" cy="-5" r="1.5" fill="#8b5cf6"/>
      <circle cx="-12" cy="6" r="1" fill="#22d3ee"/>
      <circle cx="8" cy="12" r="1" fill="#3b82f6"/>
    </g>
  </g>
  
  <!-- Code Brackets -->
  <g transform="translate(64, 64)" fill="rgba(255,255,255,0.4)" font-family="monospace" font-size="12" font-weight="bold">
    <text x="-35" y="-20" text-anchor="middle">&lt;</text>
    <text x="35" y="-20" text-anchor="middle">&gt;</text>
    <text x="-35" y="35" text-anchor="middle">&lt;/</text>
    <text x="35" y="35" text-anchor="middle">&gt;</text>
  </g>
  
  <!-- Subtle Ring -->
  <circle cx="64" cy="64" r="58" fill="none" stroke="rgba(139,92,246,0.2)" stroke-width="1"/>
</svg>